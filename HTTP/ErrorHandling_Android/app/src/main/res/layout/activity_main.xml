<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.vanillastep.example.errorhandling_android.MainActivity">

    <Button
        android:id="@+id/infiniteResponseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infinite Response" />

    <Button
        android:id="@+id/badResponseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bad Response" />

    <Button
        android:id="@+id/delayedResponseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delayed Response" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>

</LinearLayout>
